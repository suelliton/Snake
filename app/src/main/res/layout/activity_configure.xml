<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.suelliton.snake.Configure"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">


    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nivel de dificuldade"
        tools:layout_constraintTop_creator="1"
        android:layout_marginStart="48dp"
        android:layout_marginTop="16dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tamanho da cobra"
        tools:layout_constraintTop_creator="1"
        android:layout_marginStart="48dp"
        android:layout_marginTop="34dp"
        app:layout_constraintTop_toBottomOf="@+id/rdb_group_dificult"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent" />


    <Button
        android:id="@+id/btn_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="36dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="48dp" />

    <RadioGroup
        android:id="@+id/rdb_group_dificult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_constraintTop_creator="1"
        android:layout_marginTop="19dp"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/textView2">

        <RadioButton
            android:id="@+id/rdb_easy"
            android:layout_width="104dp"
            android:layout_height="wrap_content"
            android:text="Easy"
            tools:layout_editor_absoluteX="48dp"
            tools:layout_editor_absoluteY="52dp" />

        <RadioButton
            android:id="@+id/rdb_hard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hard"
            tools:layout_editor_absoluteX="48dp"
            tools:layout_editor_absoluteY="81dp" />


        <RadioButton
            android:id="@+id/rdb_veteran"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Veteran"
            tools:layout_editor_absoluteX="48dp"
            tools:layout_editor_absoluteY="113dp" />
    </RadioGroup>

    <RadioGroup
        android:id="@+id/rdb_group_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_constraintTop_creator="1"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/textView3">

        <RadioButton
            android:id="@+id/rdb_50"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="50 Hectares"
            tools:layout_editor_absoluteX="48dp"
            tools:layout_editor_absoluteY="222dp" />

        <RadioButton
            android:id="@+id/rdb_25"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="25 Hectares"
            tools:layout_editor_absoluteX="48dp"
            tools:layout_editor_absoluteY="256dp" />

    </RadioGroup>


</android.support.constraint.ConstraintLayout>
